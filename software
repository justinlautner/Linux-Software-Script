#!/bin/bash
echo ""
echo "***************************************************************"
echo "              Welcome to your first time setup!               *"
echo "   I will attempt to download all of your favorite programs   *"
echo "***************************************************************"
echo ""

#Gnome themes & tweaks
sudo apt install gnome-tweaks
sudo apt install arc-theme

#Coding
sudo snap install android-studio --classic
sudo snap install eclipse --classic
sudo snap install code --classic
sudo snap install intellij-idea-community --classic

#Productivity
sudo snap install libreoffice
sudo apt install hardinfo
#Install TickTick at https://github.com/Cajoline/ticktick-linux

#Install Gyazo
curl -s https://packagecloud.io/install/repositories/gyazo/gyazo-for-linux/script.deb.sh | sudo bash
sudo apt-get install gyazo
#Install Windscribe
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-key FDC247B7
echo 'deb https://repo.windscribe.com/ubuntu zesty main' | sudo tee /etc/apt/sources.list.d/windscribe-repo.list
sudo apt update
sudo apt install windscribe-cli
#Install Dropbox-USE .deb from https://www.dropbox.com/install
sudo apt-get install usb-creator-gtk
sudo apt install gnome-calendar

#Media
sudo snap install vlc
sudo apt install deluge
sudo snap install spotify
sudo apt install clementine
sudo apt install soundconverter
sudo apt install spek
#Install Lollypop
: 'Editing this out in favor of Clementine
sudo add-apt-repository ppa:gnumdk/lollypop
sudo apt update
sudo apt install lollypop'

#E-Mail-Exchange account still not configurable
#PROGRAM WILL NOT LAUNCH - sudo snap install electron-mail
sudo snap install mailspring

#Video Games
sudo snap install discord --classic
# Leaving this for Windows, for now - sudo apt install steam-installer

#Gnome Extensions
: 'Grub Reboot
OpenWeather
Removable Drive Menu
ShellTile
Show Desktop Button
Sound Input & Output Device Chooser
Suspend Button
User Themes'

echo ""
echo "****************************"
echo "*     All finished! :)     *"
echo "*  Welcome to your new OS  *"
echo "****************************"
echo ""
